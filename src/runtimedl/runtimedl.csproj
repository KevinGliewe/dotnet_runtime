<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net5.0</TargetFramework>

    <PackAsTool>true</PackAsTool>
    <ToolCommandName>runtimedl</ToolCommandName>
    <PackageOutputPath>./nupkg</PackageOutputPath>

    <VersionPrefix>1.0.1</VersionPrefix>

    <Authors>Kevin Gliewe</Authors>
    <Company>Gliewe.Net</Company>
    <Description>Dotnet tool to download a dotnet runtime</Description>
    <RepositoryUrl>https://github.com/KevinGliewe/dotnet_runtime</RepositoryUrl>
    <PackageProjectUrl>https://github.com/KevinGliewe/dotnet_runtime/tree/runtimedl-tool</PackageProjectUrl>
    <PackageLicenseUrl>https://github.com/KevinGliewe/dotnet_runtime/blob/master/LICENSE</PackageLicenseUrl>
    <PackageTags>tool;runtime;download</PackageTags>
    <PackageIconUrl>https://killergoldfisch.github.io/WebIconCollections/images/IconCollections/VisualStudioIcons/DownloadWebSetting.128.png</PackageIconUrl>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <GenerateAssemblyInfo>false</GenerateAssemblyInfo>

    <DocumentationMarkdownUrl>https://raw.githubusercontent.com/KevinGliewe/dotnet_runtime/runtimedl-tool/README.md</DocumentationMarkdownUrl>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="System.CommandLine.DragonFruit" Version="0.3.0-alpha.20574.7" />
    <PackageReference Include="ShellProgressBar" Version="5.1.0" />
  </ItemGroup>

</Project>
